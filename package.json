{
  "name": "@loofta/pay-sdk",
  "version": "1.0.4",
  "description": "Loofta Pay Button SDK - embeddable payment button that opens Loofta Pay checkout",
  "author": "Loofta",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
